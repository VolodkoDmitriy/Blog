<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    
    <link href="~/Content/Site.css?v=@DateTime.Now.Millisecond" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jquery-te-1.4.0.css" rel="stylesheet" type="text/css" />
</head>
<body>    
    <div class="navbar navbar-inverse ">
        <div class="container">
            <div class="navbar-header">
                <div class="navbar-brand">Blog Host</div>
            </div>
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Home Page", "Index", "Posts", new { area = "" }, new { @class = "navbar-brand" })</li>                
                @if (User.Identity.IsAuthenticated)
                {<li>@Html.ActionLink("Publish post", "create", "posts")</li>}
            </ul>
               @using (Html.BeginForm("Search", "posts", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
               {
                <div class="form-group">
                    @Html.TextBox("SearchString", "Search post text", new { @class = "form-search form-control" })
                    <input type="submit" value="Search" class="btn btn-default" />
                </div>
               }
                @{Html.RenderAction("log", "account"); }
        </div>
    </div>
    
    <div class="container body-content">
        @Scripts.Render("~/bundles/jquery")
            @RenderBody()
        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Login</h4>
                </div>
                <div class="modal-body">
                    @{Html.RenderAction("loginPopup", "Account");}

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#loginpopup').attr("href", "#");
            $('.loginpopup').attr("href", "#");
        });
    </script>
    
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    
</body>
</html>